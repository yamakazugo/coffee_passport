<%= render "shared/second-header"%>

<%= form_with model: @user, url:  user_registration_path, class: 'registration-main', local: true do |f| %>

<div class='form-wrap'>
  <div class='form-header'>
    <h2 class='form-header-text'>
      Member Information input(会員情報入力)
    </h2>
  </div>

  
  <%= render 'shared/error_messages', model: f.object %>
  

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Nickname</label>
    </div>
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) coffee太郎", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Email</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Password</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Password confirmation(確認)</label>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <div class="form-group">
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
    </div>
    <div class='input-name-wrap'>
    </div>
  </div>
  <div class="form-group">
  </div>
  <div class="form-group">
  </div>
  <div class="form-group">
  </div>
  <div class='register-btn'>
    <%= f.submit "Sin up" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/second-footer"%>
