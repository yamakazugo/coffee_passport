      <% if current_user.id == @post.user.id%>
       <%= link_to '投稿の編集', edit_post_path, method: :get, class: "item-red-btn" %>
       <p class='or-text'>or</p>
       <%= link_to '削除', post_path, method: :delete, class:'item-destroy' %>
      <% end %>
    <% end %>     
